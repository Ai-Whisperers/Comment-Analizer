[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503, F403, F401
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    tests/fixtures/*,
    *.pyc,
    .tox,
    .coverage,
    .coverage.*,
    .cache,
    nosetests.xml,
    coverage.xml,
    *.cover,
    *.log,
    .gitignore,
    .mypy_cache,
    .pytest_cache,
    .hypothesis

per-file-ignores =
    # imported but unused
    __init__.py: F401
    # line too long
    tests/*: E501